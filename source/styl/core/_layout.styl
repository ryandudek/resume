.container
    max-width 1400px
    margin 0 auto
    padding 0 50px
    position relative
    width 100%
.page-wrapper
	overflow hidden

.clear-fix:after
	content ""
	clear both
	display table

.med-container
	max-width 1100px
	margin 0 auto
	padding-left 20px
	padding-right 20px
	position relative
	width 100%



.detail-sub-category-header
	max-width 1100px
	margin 10% auto 5% auto
	font-size 45px
	font-family $ProxNovLight
	color $midnight
	border-bottom 1px solid $hrule
	line-height 50px

	&.light
		color #FFFFFF
		border-bottom none


+above(768px)

	.med-container
		padding-left 50px
		padding-right 50px


	.detail-sub-category-header
		max-width 1100px
		font-size 60px
		font-family $ProxNovLight
		color $midnight
		border-bottom 1px solid $hrule
		line-height 74px