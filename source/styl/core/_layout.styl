.page-wrapper
	background: $bodyBGColor
	color: $bodyFontColor
	overflow: hidden
	margin: 0 auto
	max-width: 1220px
	padding: 0 20px 25px

.page-section
	margin: 0 0 25px

.page-content
	position: relative
	width: 100%

.overlay
	background: $bodyBGColor url('/img/bg/background.jpg') no-repeat 0 0
	background-size: cover
	bottom: 0
	left: 0
	position: fixed
	right: 0
	top: 0
	z-index: -1
	
	&:after
		background: rgba(0,0,0,0.5) url('/img/bg/overlay.png') repeat 0 0
		box-shadow: 5px 5px 50px rgba(0,0,0,0.75) inset
		bottom: 0
		content: ""
		display: block
		height: 100%
		left: 0
		position: absolute
		right: 0
		top: 0
		width: 100%
		z-index: 1

+above(40em)
	.overlay
		background-image: url('/img/bg/background-medium.jpg')
		
+above(41.25em)
	.page-content
		margin: -135px 0 0 165px
		padding: 0 165px 0 0

+above(64em)
	.overlay
		background-image: url('/img/bg/background-large.jpg')

+above(100em)
	.overlay
		background-image: url('/img/bg/background-xl.jpg')